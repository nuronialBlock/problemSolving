#include <bits/stdc++.h>

using namespace std;

	
int main()
{
    int n,k;
    cin>>n>>k;
    if(n-k-1<k) cout<<-1<<endl;
    else
    {
        int t;

        cout<<n*k<<endl;

        for(int i=1;i<=n;i++)
        {


 			        
	        for(int j=1; j <= k;j++)
            {
            	t = i + j;
                if(t>n) t -= n ;
                cout<<i<<' '<<t<<endl;

            }
        }
    }


    return 0;
}

